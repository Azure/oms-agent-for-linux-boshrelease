                                    "General": {
                                        "title": "Processor",
                                        "newGroup": false,
                                        "icon": "",
                                        "useIcon": false
                                    },
                                    "Header": {
                                        "Title": "Total Processor Time",
                                        "Subtitle": "By Computer"
                                    },
                                    "LineChart": {
                                        "Query": "Perf | where ObjectName == \"Processor\" and InstanceName == \"_Total\" and CounterName == \"% Processor Time\" | summarize AggregatedValue = avg(CounterValue) by bin(TimeGenerated, 5m), Computer | sort by TimeGenerated desc\r\n// Oql: Type=Perf ObjectName=Processor InstanceName=\"_Total\" CounterName=\"% Processor Time\" | measure avg(CounterValue) by Computer interval 5Minutes",
                                        "yAxis": {
                                            "isLogarithmic": false,
                                            "units": {
                                                "baseUnitType": "Percentage",
                                                "baseUnit": "ZeroToOne",
                                                "displayUnit": "ZeroToOne"
                                            },
                                            "customLabel": ""
                                        }
                                    },
                                    "List": {
                                        "Query": "Perf | where ObjectName == \"Processor\" and InstanceName == \"_Total\" and CounterName == \"% Privileged Time\" | summarize AggregatedValue = avg(CounterValue) by bin(TimeGenerated, 5m), Computer | sort by TimeGenerated desc\r\n// Oql: Type=Perf ObjectName=Processor InstanceName=\"_Total\" CounterName=\"% Privileged Time\" | measure avg(CounterValue) by Computer interval 5Minutes",
                                        "HideGraph": false,
                                        "enableSparklines": true,
                                        "operation": "Summary",
                                        "ColumnsTitle": {
                                            "Name": "Computer",
                                            "Value": "Total Privileged Time (%)"
