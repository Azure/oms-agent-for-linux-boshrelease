                                    },
                                    "Header": {
                                        "Title": "Total Bytes Transmitted (GB)",
                                        "Subtitle": "By Computer"
                                    },
                                    "Donut": {
                                        "Query": "Perf | where ObjectName == \"Network\" and CounterName == \"Total Bytes Transmitted\" | summarize AggregatedValue = max((CounterValue / 1073741824)) by Computer | sort by AggregatedValue desc\r\n// Oql: Type=Perf ObjectName=Network CounterName=\"Total Bytes Transmitted\" | measure max(div(CounterValue,1073741824)) by Computer",
                                        "CenterLegend": {
