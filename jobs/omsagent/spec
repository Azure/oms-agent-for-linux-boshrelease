---
name: omsagent
templates:
  omi-ctl.erb: bin/omi-ctl
  omsagent-ctl.erb: bin/omsagent-ctl

packages:
  - omi
  - scx
  - omsagent
  - omsconfig

properties:
  oms.workspace_id:
    description: OMS workspace ID
  oms.workspace_key:
    description: OMS workspace key
  rsyslog.selector_list:
    description: list of syslog selectors, syntax is FACILITY.PRIORITY
  rsyslog.port:
    description: the syslog port that the OMS agent is listening on, default is 25224
  rsyslog.protocol_type:
    description: udp or tcp, default is udp
